<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VScoutCentral.MainPage"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
             xmlns:viewmodel="clr-namespace:VScoutCentral.ViewModels"
             x:DataType="viewmodel:MainPageViewModel">

    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

        <Button Text="Configuration" Command="{Binding OpenConfigurationCommand}" />
        <Button Text="Rounds" Command="{Binding OpenRoundsCommand}" />
        <Button Text="Import QR Code" Command="{Binding OpenReadQrCodeViewCommand}" />
        <Button Text="Save Data CSV" Command="{Binding SaveDataCsvCommand}" />

    </VerticalStackLayout>

</ContentPage>
