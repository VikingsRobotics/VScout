<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:VScoutCentral.ViewModels"
             x:Class="VScoutCentral.Views.JustInTimeRectangeView"
             x:DataType="viewmodels:JustInTimeRectangeViewModel"
             HeightRequest="400"
             WidthRequest="300">
    <VerticalStackLayout Padding="3">
        <Label Text="{Binding TeamNumber, StringFormat='Team: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
        <Label Text="{Binding Station, StringFormat='Station: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding Rank, StringFormat='Rank: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding RoundsPlayed, StringFormat='Rounds Played: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding AverageAmp, StringFormat='Avg Amp: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding AverageSpeaker, StringFormat='Avg Speaker: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding Comments, StringFormat='Comments: {0}'}" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="WordWrap" />
    </VerticalStackLayout>
</ContentView>
