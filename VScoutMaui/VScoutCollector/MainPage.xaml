<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VScoutCollector.MainPage"
             xmlns:viewmodels="clr-namespace:VScoutCollector.ViewModels"
             x:DataType="viewmodels:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="Configuration" Command="{Binding OpenDownloadScheduleCommand}" />
            <Button Text="Rounds" Command="{Binding OpenRoundsCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
